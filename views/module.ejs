<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Module</title>
  <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link href="./assests/css/module.css" rel="stylesheet">
<script src="module.js"></script>
</head>
<body>
  <div class="container">
    
    <div class="stepwizard">
        <div class="stepwizard-row setup-panel">
            <div class="stepwizard-step">
                <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
                <p>Step 1</p>
            </div>
            <div class="stepwizard-step">
                <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
                <p>Step 2</p>
            </div>
            <div class="stepwizard-step">
                <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
                <p>Step 3</p>
            </div>
        </div>
    </div>
    <form role="form">
        <div class="row setup-content" id="step-1">
            <div class="col-xs-12">
                <div class="col-md-12">
                    <h3> Step 1</h3>
                    <div class="form-group">
                      <input type="tel" style="width: 25%;" id="phone" placeholder="Mobile NO." name="phone" pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}" maxlength="12" style="width: 100%;" required="required">
                    </div>
                    <div class="form-group">
                      <iframe src="https://maps.google.com/maps?q=tamilnadu&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0"
                      style="border:0; width: 75%" allowfullscreen></iframe>
                    </div>
                    <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Next</button>
                </div>
            </div>
        </div>
        <div class="row setup-content" id="step-2">
            <div class="col-xs-12">
                <div class="col-md-12">
                    <h3> Step 2</h3>
                    <div class="form-group">
                        <form action="/action_page.php">
                            <label for="img">Select image:</label>
                            <input type="file" id="img" name="img" accept="image/*">
                        </form>    
                    </div>
                    <label>Quantity:</label>
                    <div class="number-input md-number-input" style="width:11%">
                        
                        <button onclick="this.parentNode.querySelector('input[type=number]').stepDown()" class="minus"></button>
                        <input class="quantity" min="1" max="100" name="quantity" value="1" type="number">
                        <button onclick="this.parentNode.querySelector('input[type=number]').stepUp()" class="plus"></button>
                      </div>
                            
                    <!-- <button class="btn btn-primary backbtn btn-lg pull-left " type="button">Back</button> -->
                    <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Next</button>
                </div>
            </div>
        </div>
        <div class="row setup-content" id="step-3">
            <div class="col-xs-12">
                <div class="col-md-12">
                    <h3> Step 3</h3>
                    <textarea class="form-control" rows="4" placeholder="Write more message here"id="comment"cols="50"style="width:50%"></textarea></div>
                    <span><button class="btn btn-success btn-lg pull-right" type="submit">Finish!</button></span>
                </div>
            </div>
        </div>
    </form>
    </div>
</body>
</html>